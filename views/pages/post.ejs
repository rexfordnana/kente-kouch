<!DOCTYPE html>
<html lang="en">

<%- include('../layouts/head'); -%>

<body>

  <!-- Navigation -->
  <%- include('../layouts/navbar'); -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%=blogpost.title%></h1>
            <h2 class="subheading"><%=blogpost.body.substring(0, 50)%> ...</h2>
            <span class="meta">Posted by <%= blogpost.author %>
              on <%= blogpost.date.toDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= blogpost.body %>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <!-- Footer -->
  <%- include('../layouts/footer'); -%>
  <!-- Bootstrap core JavaScript -->
  <%- include('../layouts/scripts'); -%>

</body>
</html>
